<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_toStartOf="@id/txt2"
        android:layout_above="@+id/txt2"
        android:id="@+id/txt1"
        android:textSize="40sp"
        android:text="RED"
        android:background="#DA0303"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/txt2" />
    <TextView
        android:layout_toStartOf="@id/txt3"
        android:layout_above="@+id/txt3"
        android:id="@+id/txt2"
        android:textSize="40sp"
        android:text="Green"
        android:background="#23DA03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/txt3" />
    <TextView
        android:layout_toStartOf="@id/txt4"
        android:layout_above="@+id/txt4"
        android:id="@+id/txt3"
        android:textSize="40sp"
        android:text="Blue"
        android:background="#038FDA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/txt4" />

    <TextView
        android:layout_centerInParent="true"
       android:layout_alignParentRight="true"
        android:id="@+id/txt4"
        android:textSize="40sp"
        android:text="Orange"
        android:background="#FFC107"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toStartOf="@id/txt4"
      android:layout_below="@id/txt4"
        android:id="@+id/txt5"
        android:textSize="40sp"
        android:text="Gray"
        android:background="#635D5D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/txt4" />
    <TextView
        android:layout_toStartOf="@id/txt5"
        android:layout_below="@id/txt5"
        android:id="@+id/txt6"
        android:textSize="40sp"
        android:text="Pink"
        android:background="#DA03BD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/txt5" />

    <TextView
        android:layout_toStartOf="@id/txt6"
        android:layout_below="@id/txt6"
        android:id="@+id/txt7"
        android:textSize="40sp"
        android:text="Pink"
        android:background="#0376DA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/txt6" />
</RelativeLayout>